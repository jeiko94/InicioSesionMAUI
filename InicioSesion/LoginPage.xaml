<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InicioSesion.LoginPage"
             Title="Iniciar sesión">
    
    <StackLayout Padding="30" Spacing="20">
        <Label Text="Bienvenido de nuevo" FontSize="20" HorizontalOptions="Center"/>

        <Entry x:Name="UsernameEntry" Placeholder="Usuario"/>
        <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"/>

        <Button Text="Iniciar sesión" Clicked="OnLoginButtonClicked" BackgroundColor="Green"/>
        <Button Text="Crear una cuenta" Clicked="OnGoToSingUpButtonClicked"
                BackgroundColor="Transparent" TextColor="Blue"/>
    </StackLayout>

</ContentPage>